@model gitMARATHON.Models.RegisterViewModel

@{
    ViewData["Title"] = "Sign up";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-sm" style="width: 350px;">
        <h3 class="text-center mb-3">Sign up</h3>

        <form method="post" asp-controller="Account" asp-action="Register" asp-antiforgery="true">
            <!-- Для зручності можна виводити всі помилки одним блоком: -->
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="DisplayName"></label>
                <input asp-for="DisplayName" class="form-control" placeholder="Enter your display name" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Create a password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Поле для секретної фрази (не обов'язкове) -->
            <div class="form-group mt-2">
                <label asp-for="SecretPhrase">Secret Phrase (for Admins)</label>
                <input asp-for="SecretPhrase" class="form-control" type="password" placeholder="Optional: Admin Secret" />
                <span asp-validation-for="SecretPhrase" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Sign up</button>
        </form>

        <hr />
        <p class="text-center">
            Already have an account? <a asp-controller="Account" asp-action="Login">Sign in</a>
        </p>
    </div>
</div>
