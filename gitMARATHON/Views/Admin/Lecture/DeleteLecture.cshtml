@model gitMARATHON.Models.Lecture

@{
    ViewData["Title"] = "Delete Lecture";
}

<h2>Are you sure you want to delete the lecture "@Model.Title"?</h2>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Lecture")" class="btn btn-secondary">Cancel</a>
</form>
