@model gitMARATHON.Models.Task

@{
    ViewData["Title"] = "Додати нове завдання";
}

<div class="container mt-4">
    <h2 class="text-center text-primary">Додати нове завдання</h2>

    <form asp-action="CreateTask" method="post">
        <div class="mb-3">
            <label class="form-label">Назва завдання</label>
            <input asp-for="Name" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Опис завдання</label>
            <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
        </div>

        <button type="submit" class="btn btn-success">Додати завдання</button>
    </form>
</div>
